---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
    image: ImageMetadata;
    alt: string;
    description: string;
    link: string;
}

const { image, alt, description, link } = Astro.props;
---

<a class="tile" target="_blank" href={link}>
    <Image src={image} alt={alt} class="tile__image" />
    <div class="tile__description">
        <p>{description}</p>
    </div>
</a>

<style scoped>
    .tile {
        position: relative;
        overflow: hidden;
        display: inline-block;
        border-radius: 10px;
        height: 100%;
        width: 100%;
        text-decoration: none;
        color: unset;
        cursor: pointer;
    }
    .tile__image {
        height: 100%;
        object-fit: cover;
    }
    .tile__description {
        position: absolute;
        bottom: 0;
        right: 0;
        left: 0;
        background: var(--black);
        font-size: 0.725em;
        padding: 8px;
        max-width: 100%;
        color: hsl(0, 18%, 96%);
        transform: translateY(100%);
        transition: transform 0.3s;
    }
    @media (hover: hover) {
        .tile:hover .tile__description {
            transform: translateY(0);
        }
    }
</style>
